{
  "name": "file-lang-map",
  "version": "1.0.0",
  "description": "Identify programming languages from filenames and extensions.",
  "keywords": [
    "linguist",
    "detect-language",
    "file-extension",
    "programming-languages",
    "extension-map",
    "filename-map",
    "filename",
    "collision-aware",
    "zero-dependency"
  ],
  "author": "Mykhailo Onikiienko <michael.onikienko@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onikienko/file-lang-map.git"
  },
  "bugs": {
    "url": "https://github.com/onikienko/file-lang-map/issues"
  },
  "homepage": "https://github.com/onikienko/file-lang-map#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write .",
    "generate": "tsx scripts/generateJSONs.ts",
    "compile": "tsup src/index.ts --format cjs,esm --dts --target es2020 --clean",
    "build": "npm run generate && npm run compile",
    "clean": "tsx scripts/clean.ts",
    "test": "node --import tsx --test test/**/*.test.ts",
    "test:ci": "node --import tsx --test $(find test -name '*.test.ts')",
    "changelog:latest": "conventional-changelog -p conventionalcommits -r 1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.9",
    "js-yaml": "^4.1.0",
    "prettier": "^3.8.1",
    "rollup": "^4.57.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "conventional-changelog-cli": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
